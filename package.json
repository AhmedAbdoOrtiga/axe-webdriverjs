{
  "name": "axe-webdriverjs",
  "description": "Provides a method to inject and analyze web pages using aXe",
  "version": "2.0.0",
  "license": "MPL-2.0",
  "main": "lib/index.js",
  "contributors": [
    {
      "name": "Dylan Barrell",
      "organization": "Deque Systems, Inc.",
      "url": "http://github.com/dylanb/"
    },
    {
      "name": "Marcy Sutton",
      "organization": "Deque Systems, Inc.",
      "url": "http://github.com/marcysutton/"
    },
    {
      "name": "Wilco Fiers",
      "organization": "Deque Systems, Inc.",
      "url": "http://github.com/wilcofiers/"
    },
    {
      "name": "David Sturley",
      "organization": "Deque Systems, Inc.",
      "url": "http://deque.com/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dequelabs/axe-webdriverjs.git"
  },
  "keywords": [
    "a11y",
    "unit",
    "testing",
    "tdd",
    "bdd",
    "accessibility",
    "aXe",
    "selenium",
    "webdriver",
    "webdriverjs"
  ],
  "scripts": {
    "lint": "eslint './lib/**/*.js' './test/**/*.js' --fix",
    "fmt": "prettier --write './lib/**/*.js' './test/**/*.js'",
    "precommit": "lint-staged",
    "test": "mocha test/unit/*.js test/integration/*.js",
    "test:unit": "mocha test/unit/*.js",
    "test:integration": "mocha test/integration/*.js",
    "test:sauce": "mocha test/sauce/*.js",
    "coverage": "nyc npm run test:unit"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "selenium-webdriver": ">= 2.53.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.1.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "proxyquire": "^2.0.1",
    "selenium-webdriver": "^3.6.0",
    "serve-handler": "^3.2.2",
    "sinon": "^6.0.0"
  },
  "dependencies": {
    "axe-core": "^3.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "useTabs": false,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ]
  }
}
